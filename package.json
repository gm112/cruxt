{
  "name": "cruxt",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gm112/cruxt"
  },
  "scripts": {
    "prepare": "pnpm workspace:setup:all",
    "playground": "pnpm run --filter=nuxt-v4-mobile-app-with-auth dev",
    "test:all": "pnpm run --parallel test",
    "format:all": "pnpm run --parallel format",
    "lint:all": "pnpm run --parallel lint",
    "bench:all": "pnpm run --parallel bench",
    "deploy:deno:project": "NUXT_PUBLIC_I18N_BASE_URL=/ pnpm run --filter=$PROJECT_NAME build && pnpm run --filter=$PROJECT_NAME deploy:deno",
    "workspace:setup:all": "bash ./scripts/pnpm-workspace/workspace-setup-all.sh",
    "workspace:setup:generate-certs": "cd ./shared/localhost && mkcert -install && mkcert -cert-file localhost.pem -key-file localhost-key.pem localhost 127.0.0.1 ::1'",
    "workspace:setup:generate-tsconfig-project-references": "bash ./scripts/pnpm-workspace/update-tsconfig.sh",
    "workspace:setup:generate-tfvars": "bash ./scripts/terraform/generate-tfvars.sh",
    "cloc": "pnpm dlx cloc --vcs git . --exclude-list-file=pnpm-lock.yaml --exclude-lang=JSON,INI,Text,YAML",
    "ci:publish": "pnpm publish -r"
  },
  "keywords": [],
  "author": "gm112",
  "license": "MPL-2.0",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "devDependencies": {
    "@changesets/cli": "catalog:"
  }
}
